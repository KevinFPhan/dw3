---
import ImageC from '../utils/ImageC.astro';

interface Props {
	h2: string;
	p: string;
	imagePath: string;
	altText: string;
  btn: string;
}

const block = Astro.props;
---

<section class="relative my-10 py-20 xl:my-20">
	<div class="relative z-10 mx-auto max-w-screen-xl px-4 py-8 sm:py-16 lg:px-6">
		<div class="mx-auto max-w-screen-sm text-center">
			<h2 class="mb-10">
				{block.h2}
			</h2>
			<p class="mb-10 ">
				{block.p}
			</p>
			<a
				href="/contact"
				class="mb-2   rounded-lg bg-primary-300 px-8 py-4 font-medium text-primary-700 transition-all duration-100 ease-in hover:bg-primary-500 hover:text-white hover:shadow-xl focus:outline-none focus:ring-4 focus:ring-primary-300"
				>{block.btn}</a
			>
		</div>
	</div>

	<!-- Bg Image -->
	<div class="absolute left-0 top-0 h-full w-full">
		<ImageC
			overlay={true}
			alt={block.altText}
			overlayColor="bg-neutral-800/70"
			class="h-full w-full"
			image={block.imagePath}
		/>
	</div>
</section>
